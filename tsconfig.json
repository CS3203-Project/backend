{
  "compilerOptions": {
    "outDir": "./dist",
    
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "lib": ["ES2022"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    "strict": false,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,
    
    "isolatedModules": true,
    "moduleDetection": "force"
  },
  "include": [
    "src/**/*",
    "index.ts",
    "prisma/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "esm": true
  }
}
